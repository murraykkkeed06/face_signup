html
   head
      title Person
   body
      if(type == "error")
         h3(style = "color:red") #{message}
      else
         h3 New person, 
   
         h4  name: #{person.name} 
         h4  age: #{person.age} 
         h4  nationality: #{person.nationality}
         h3  added!
      if(type == "success")
         h3 #{message}